{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**",
			"!!**/dist",
			"!!docs/repo-summary.json",
			"!!server/data/*.json"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noArguments": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "warn",
				"useButtonType": "warn",
				"useSemanticElements": "warn",
				"useAriaPropsSupportedByRole": "warn"
			},
			"suspicious": {
				"useIterableCallbackReturn": "warn",
				"noExplicitAny": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noInvalidUseBeforeDeclaration": "warn",
				"useExhaustiveDependencies": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"includes": ["server/src/**/*.ts", "shared/**/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off",
						"useIterableCallbackReturn": "off"
					},
					"style": {
						"noNonNullAssertion": "off"
					},
					"correctness": {
						"noUnusedVariables": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.test.ts", "**/__tests__/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off",
						"useIterableCallbackReturn": "off"
					},
					"style": {
						"noNonNullAssertion": "off"
					},
					"correctness": {
						"noConstructorReturn": "off"
					}
				}
			}
		}
	]
}
